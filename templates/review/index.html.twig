{% extends 'base.html.twig' %}

{% block body %}
    <div class="bs-example" data-example-id="striped-table">
        <a href="{{path('create_review')}} " class='btn btn-success'>Create new Review</a>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Ratting</th>
                <th>Comment</th>
                <th>Date Posted</th>

            </tr>
            </thead>
            <tbody>
            {% for review in reviews %}
                <tr>
                    <th scope="row">{{ review.id }}</th>
                    <td>{{ review.Ratting }}</td>
                    <td>{{ review.Comment }}</td>
                    <td>{{ reciew.Date|date('F j,Y, g:i a') }}</td>
                    <td>

                        <a href="{{path('details_review',{'id':review.id})}} " class='btn btn-success'>View</a>
                        <a href="{{path('edit_review',{'id':review.id})}} " class='btn btn-default'>Edit</a>
                        <a href="{{ path('delete_review', {'id': review.id}) }} "class='btn btn-danger'>Delete</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
