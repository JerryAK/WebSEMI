{% extends 'base.html.twig' %}
{% block body %}
    {{ form_start(form) }}
    <div class="form-group">
        <label for="category">Product</label>
        {{ form_widget(form.product,{
            'attr':{
                'class':'form-control'
            }
        }) }}
    </div>
    <div class="form-group">
        <label for="review">ratting:</label>
        {{ form_widget(form.ReviewRatting,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Ratting'
            }
        }) }}
    </div>
    <div class="form-group">
        <label for="review">Comment</label>
        {{ form_widget(form.ReviewComment,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Comment'
            }
        }) }}
    </div>
    <div class="form-group">
        <label for="due_date">Date</label>
        {{ form_widget(form.CreateDate,{
            'attr':{
                'class':'form-control'
            }
        }) }}
    </div>

    <input type="submit" name="create_review" value="Create" class="btn btn-primary"/>
    {{ form_end(form) }}
{% endblock %}
